{
    "name": "foton/patterns",
    "description": "PHP implementation of patterns from Head First Design Patterns",
    "keywords": [
		"foton",
		"patterns",
		"Head First Design Patterns"
	],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gregory",
            "email": "neogen570@gmail.com"
        }
    ],
	"require": {
		"php": "~7.2"
	},
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
	"autoload": {
		"psr-4": {
			"Foton\\Patterns\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Foton\\Patterns\\": "t"
		}
	},
	"scripts": {
		"test": "./vendor/bin/phpunit --colors=always",
		"check-style": "./vendor/bin/phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src t",
        "fix-style": "./vendor/bin/phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src t"
	}
}
